<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fergaral.datetophoto.activities.DiskSpaceUsageActivity$PlaceholderFragment">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/piechart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar"
        />

    <android.support.v7.widget.AppCompatTextView android:id="@+id/tvphotoswithoutdateusage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/piechart"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.AppCompatTextView android:id="@+id/tvphotoswithdateusage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvphotoswithoutdateusage"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.AppCompatButton android:id="@+id/btndeletephotoswithdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Eliminar fotos con fecha" />

</RelativeLayout>