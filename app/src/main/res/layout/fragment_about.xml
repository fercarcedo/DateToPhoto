<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_fragment_container"
    android:background="@color/tutorialBackground">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView android:id="@+id/tvabout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date To Photo"
        android:textSize="24sp"
        android:textColor="@color/about_text_color"
        android:layout_above="@+id/tvabout2"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.AppCompatTextView android:id="@+id/tvabout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@color/about_text_color"
        android:layout_above="@+id/tvabout3"
        android:layout_marginBottom="50dp" />

    <android.support.v7.widget.AppCompatTextView android:id="@+id/tvabout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Desarrollada por Fernando García Álvarez (@fergaral96)"
        android:textSize="14sp"
        android:textColor="@color/about_text_color"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp" />

    <android.support.v7.widget.AppCompatTextView android:id="@+id/tvabout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Testing por Sergio Artidiello González"
        android:textSize="14sp"
        android:textColor="@color/about_text_color"
        android:layout_below="@id/tvabout3"
        android:layout_marginBottom="10dp" />

    </RelativeLayout>